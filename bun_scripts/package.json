{
  "name": "bun_scripts",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "farm": "bun run plant_and_work.ts",
    "farm:testnet": "bun run --env-file=.env.testnet plant_and_work.ts",
    "farm:futurenet": "bun run --env-file=.env.futurenet plant_and_work.ts",
    "farm:scheduled": "bun run farm_scheduled.ts",
    "harvest": "bun run harvest.ts",
    "harvest:testnet": "bun run --env-file=.env.testnet harvest.ts",
    "pm2:start": "pm2 start pm2/ecosystem.config.cjs --only kale-farmer",
    "pm2:start:testnet": "pm2 start pm2/ecosystem.config.cjs --only kale-farmer-testnet",
    "pm2:start:futurenet": "pm2 start pm2/ecosystem.config.cjs --only kale-farmer-futurenet",
    "pm2:stop": "pm2 stop pm2/ecosystem.config.cjs",
    "pm2:restart": "pm2 restart pm2/ecosystem.config.cjs",
    "pm2:delete": "pm2 delete pm2/ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^14.3.0",
    "chalk": "^5.4.1",
    "kale-sc-sdk": "file:../ext/kale-sc-sdk"
  }
}